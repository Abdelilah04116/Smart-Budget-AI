@model Transaction
@{
    ViewData["Title"] = "Nouvelle Transaction";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h3><i class="fas fa-plus-circle"></i> Nouvelle Transaction</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post" id="transactionForm">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description *</label>
                        <input asp-for="Description" class="form-control" id="descriptionInput" 
                               placeholder="Ex: Achat supermarché Carrefour" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <button type="button" class="btn btn-info btn-sm mt-2" id="aiPredictBtn">
                            <i class="fas fa-brain"></i> Prédire la catégorie avec l'IA
                        </button>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label">Montant * (€)</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" 
                               placeholder="Ex: -50.00 pour dépense ou 1500.00 pour revenu" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                        <small class="form-text text-muted">
                            💡 Montant négatif = dépense | Montant positif = revenu
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Catégorie *</label>
                        <input asp-for="Category" class="form-control" id="categoryInput" 
                               placeholder="Ex: Alimentation, Transport, Salaire..." list="categoryList" />
                        <datalist id="categoryList">
                            <option value="Alimentation"></option>
                            <option value="Transport"></option>
                            <option value="Logement"></option>
                            <option value="Santé"></option>
                            <option value="Loisirs"></option>
                            <option value="Shopping"></option>
                            <option value="Salaire"></option>
                            <option value="Autre"></option>
                        </datalist>
                        <span asp-validation-for="Category" class="text-danger"></span>
                        <div id="aiCategoryIndicator" class="mt-2" style="display:none;">
                            <span class="badge bg-info">
                                <i class="fas fa-brain"></i> Catégorie suggérée par l'IA
                            </span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Date" class="form-label">Date *</label>
                        <input asp-for="Date" class="form-control" type="date" 
                               value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <input asp-for="IsAiCategorized" type="hidden" id="isAiCategorizedInput" value="false" />

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-save"></i> Enregistrer la transaction
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Annuler
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        document.getElementById('aiPredictBtn').addEventListener('click', async function() {
            const description = document.getElementById('descriptionInput').value;
            
            if (!description || description.trim().length === 0) {
                alert('Veuillez entrer une description pour la prédiction.');
                return;
            }

            this.disabled = true;
            this.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Prédiction en cours...';

            try {
                const response = await fetch('/api/ai/predict-category', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ description: description })
                });

                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('categoryInput').value = data.category;
                    document.getElementById('isAiCategorizedInput').value = 'true';
                    document.getElementById('aiCategoryIndicator').style.display = 'block';
                } else {
                    alert('Erreur lors de la prédiction. Veuillez réessayer.');
                }
            } catch (error) {
                console.error('Erreur:', error);
                alert('Erreur de connexion à l\'IA.');
            } finally {
                this.disabled = false;
                this.innerHTML = '<i class="fas fa-brain"></i> Prédire la catégorie avec l\'IA';
            }
        });
    </script>
}