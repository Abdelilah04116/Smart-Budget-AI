@model List<Transaction>
@{
    ViewData["Title"] = "Mes Transactions";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-list"></i> Mes Transactions</h1>
    <a asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Nouvelle Transaction
    </a>
</div>

@if (Model != null && Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Catégorie</th>
                            <th class="text-end">Montant</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToString("dd/MM/yyyy")</td>
                                <td>
                                    @item.Description
                                    @if (item.IsAiCategorized)
                                    {
                                        <span class="badge bg-info" title="Catégorisé par IA">
                                            <i class="fas fa-brain"></i> AI
                                        </span>
                                    }
                                </td>
                                <td><span class="badge bg-secondary">@item.Category</span></td>
                                <td class="text-end">
                                    <strong class="@(item.Amount >= 0 ? "text-success" : "text-danger")">
                                        @item.Amount.ToString("C")
                                    </strong>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-danger" title="Supprimer">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <td colspan="3" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-end">
                                <strong class="@(Model.Sum(t => t.Amount) >= 0 ? "text-success" : "text-danger")">
                                    @Model.Sum(t => t.Amount).ToString("C")
                                </strong>
                            </td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="fas fa-info-circle fa-3x mb-3"></i>
        <h4>Aucune transaction trouvée</h4>
        <p>Commencez par créer votre première transaction !</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Créer une transaction
        </a>
    </div>
}